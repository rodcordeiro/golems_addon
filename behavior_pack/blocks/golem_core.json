                        "tag @p[r=3] add golem_creator",
                        "setblock ~ ~ ~ air",
                        "setblock ~ ~1 ~ air",
                        "setblock ~-1 ~ ~ air",
                        "setblock ~1 ~ ~ air",
                        "setblock ~1 ~-1 ~ air"
                    ]
                }
            }
        }
    }
}