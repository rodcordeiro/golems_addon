            "is_summonable": true,
            "is_experimental": false
        },
        "component_groups": {
            "wild": {
                "minecraft:type_family": {
                    "family": [
                        "stone_golem",
                        "monster"
                    ]
                },
                "minecraft:behavior.nearest_attackable_target": {
                    "priority": 1,
                    "entity_types": [
                        {
                            "filters": {
                                "test": "is_family",
                                "subject": "other",
                                "value": "player"
                            },
                            "max_dist": 30
                        }
                    ]
                }
            },
            "player_created": {
                "minecraft:type_family": {
                    "family": [
                        "stone_golem",
                        "player_golem"
                    ]
                },
                "minecraft:behavior.nearest_attackable_target": {
                    "priority": 1,
                    "entity_types": [
                        {
                            "filters": {
                                "any_of": [
                                    {
                                        "test": "is_family",
                                        "subject": "other",
                                        "value": "monster"
                                    },
                                    {
                                        "all_of": [
                                            {
                                                "test": "is_family",
                                                "subject": "other",
                                                "value": "player"
                                            },
                                            {
                                                "test": "is_owner",
                                                "subject": "other",
                                                "value": false
                                            }
                                        ]
                                    }
                                ]
                            },
                            "max_dist": 35
                        }
                    ]
                }
            }
        },
        "components": {
            "minecraft:health": {
                "value": 40,
                "max": 60
            },
            "minecraft:movement": {
                "value": 0.25
            },
            "minecraft:navigation.walk": {
                "can_path_over_water": true,
