            }
        },
        "events": {
            "minecraft:entity_spawned": {
                "add": {
                    "component_groups": [
                        "wild"
                    ]
                }
            },
            "player_created": {
                "remove": {
                    "component_groups": [
                        "wild"
                    ]
                },
                "add": {
                    "component_groups": [
                        "player_created"
                    ]
                }
            },
            "minecraft:on_death": {
                "run_command": {
                    "command": [
                        "kill @e[type=golems:golem_anchor, distance=..2]"
                    ]
                }
